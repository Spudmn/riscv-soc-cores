CAPI=1

[main]
name = marsohod3-picorv32-wb-soc
description = RISC-V SoC for Marsohod3

depend =
  picorv32-wb-soc
  riscv-nmon

simulators = icarus

[verilog]
src_files =
  rtl/verilog/aux.v
  rtl/verilog/marsohod3_picorv32_wb_soc.v
  rtl/verilog/max10-altpll/altpll0.v

tb_private_src_files =
  bench/picorv32_wb_soc_tb.v

[icarus]
iverilog_options = -DPRESCALER_PRESET_HARD -DPRESCALER_HIGH_PRESET=0 -DPRESCALER_LOW_PRESET=2

[simulator]
toplevel = picorv32_wb_soc_tb
